end

puts "Veuillez saisir votre année de naissance"
year_of_birth = gets.chomp.to_i
n = 2021
for n in year_of_birth .. n
    age = n - year_of_birth
       puts "#{n}=#{age}"
end

puts "Veuillez saisir votre age"
age = gets.chomp.to_i
annee = 2021
start = annee - age

for n in start..annee  
    x = annee - n
    y = age - x
    puts "Il y a #{x} ans tu avais #{y} ans"
end
