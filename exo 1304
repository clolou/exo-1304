number = gets.chomp.to_i
number.times do |i|
    puts i + 1
end
puts "Bonjour, Choisis un nombre stp "
n = gets.chomp.to_i
total = n
n.times do
total -= 1
puts total
end

puts "Bonjour, donne moi ton année de naissance ? "
n = gets.chomp.to_i
n.times do |i|
total = 2021
